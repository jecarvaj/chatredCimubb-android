<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text_material_lightubb</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_darkubb</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_darkubb</item>
        <item name="android:colorBackground">@color/background_material_lightubb</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text_material_lightubb</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_darkubb</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_darkubb</item>
        <item name="android:colorBackground">@color/background_material_lightubb</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text_material_lightubb</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_darkubb</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_darkubb</item>
        <item name="android:colorBackground">@color/background_material_lightubb</item>
    </style>

    <style name="AppThemeCIMUBB" parent="AppTheme" >
        <item name="android:textColorPrimary">@color/primary_text_material_lightubb</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_darkubb</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_darkubb</item>
    </style>

</resources>
